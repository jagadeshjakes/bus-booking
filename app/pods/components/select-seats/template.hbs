                          {{else}}
                            <img src="assets/images/ST.png" height="35" width="35" onclick={{action 'bookSeat' col}}><br>
                            {{col.seatNo}}
                          {{/if}}
                       {{/if}}
                     </td>
                   {{/if}}
                 {{/each}}
                </tr>
             {{/each}}
            </table>
          </div>
        </div>
        <div class='col-6'>
          <div class='right'>
            <table>
              {{#each lowerLeft as |row|}}
                <tr>
                 {{#each row as |col|}}
                 {{#if col.isSleeper}}
                     <td>
                       {{#if col.isBooked}}
                         {{#if col.isFemale}}
