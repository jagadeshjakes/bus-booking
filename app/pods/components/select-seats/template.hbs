                          {{else}}
                            <img src="assets/images/SL.png" height="85" width="40" onclick={{action 'bookSeat' col}}><br>
                            {{col.seatNo}}
                          {{/if}}
                       {{/if}}
                     </td>
                   {{else}}
                     <td>
                       {{#if col.isBooked}}
                         {{#if col.isFemale}}
                           <img src="assets/images/STfemale.png" height="35" width="35"><br>
                           {{col.seatNo}}
                         {{else}}
                           <img src="assets/images/STbooked.png" height="35" width="35"><br>
                           {{col.seatNo}}
